{
  "name": "telegram-rss",
  "version": "0.0.1",
  "description": "Telegram Bot to generate RSS feed from messages",
  "main": "dist/entry.js",
  "scripts": {
    "tsc": "./node_modules/typescript/bin/tsc",
    "tsc-alias": "./node_modules/tsc-alias/dist/bin/index,js",
    "prewatch": "npm run build",
    "prestart": "npm run build",
    "start": "node -r dotenv/config dist/entry.js",
    "watch": "nodemon -e js,ts,json",
    "build": "tsc -p tsconfig.json",
    "postbuild": "tsc-alias -p tsconfig.json"
  },
  "keywords": [
    "bot",
    "RSS",
    "Telegram"
  ],
  "author": "rasjonell",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/node-fetch": "^2.6.1",
    "nodemon": "^2.0.16",
    "tsc-alias": "^1.6.7",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "telegraf": "^4.11.2"
  }
}
